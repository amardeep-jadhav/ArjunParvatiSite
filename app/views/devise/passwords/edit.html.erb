<%#= render "devise/shared/links" %>



<div class="container-fluid">
  <div class="row vh-100 bg-white">
    <div class="col-md-5 d-flex">
      <div class="login-wrapper m-auto">
        <div class="brand-wrapper mb-5">
        <img class="navbar-brand mr-auto logo" src=<%=asset_path('ArjunParvatilogo.svg')%> style="width:334px;height:90px;" />
        </div>
        <h3 class="text-dark mb-3">Change your password</h3>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <label for="email" class="sr-only">Email</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-envelope text-secondary"></i></span>
              </div>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "New Password"%>               
            </div>
            <div id="password_error" style="font-size: 14px;"></div>
          </div>
           <div class="form-group">
            <label for="email" class="sr-only">Email</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-envelope text-secondary"></i></span>
              </div>
              <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Password Confirmation"%>               
            </div>
            <div id="password_confirmation_error" style="font-size: 14px;"></div>
          </div>
           <%= f.submit "Change my password", class: "btn btn-primary btn-block btn-lg mb-3" %>
        <%end%>
        <p class="login-wrapper-footer-text" style="margin-bottom: 8px">Don't have an account? 
          <%= link_to "Register here", new_registration_path(resource_name), class: "text-danger" %>
        </p>
         <p class="login-wrapper-footer-text">You already have an account? 
          <%= link_to "Sign in", new_session_path(resource_name), class: "text-danger" %>
        </p>
      </div>
    </div>
    <div class="col-md-7 px-0 d-none d-md-block">
    <img class="mr-auto login-img" alt="login image" src=<%=asset_path('login-bg3.jpg')%> />
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#new_user").validate({
      rules: {
        "user[email]": {
          email: true,
          required: true
        },
        "user[password]": {
          required: true,
          minlength: 8,
          maxlength: 30
        },
        "user[password_confirmation]":{
          required: true,
          equalTo: "#user_password"
        },
      },
      messages: {
        "user[email]": {
          required: "Email can not be blank"
        },
        "user[password]": {
          required: "Password can not be blank"
        },
        "user[password_confirmation]": {
          required: "Password Confirmation can not be blank"
        },
      },
      errorPlacement: function (error, element) {
        var name = $(element).attr("name");
        var error_element = name.match(/\[(.*?)\]/)[1]+"_error";
        error.appendTo($("#email_error"));
        if ( error_element == "email_error") {
          error.appendTo("#email_error");
        } else if(error_element == "password_error"){
          error.appendTo("#password_error");
        }else{
          error.appendTo("#password_confirmation_error");
        }
      },
    });
  });
</script>